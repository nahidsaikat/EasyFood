<Page
    x:Class="EasyFood.View.User"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EasyFood.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <!--<Grid Background="#FF90B8C1">-->
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Frame x:Name="UserFrame" />
    </Grid>
    <Page.BottomAppBar>
        <CommandBar x:Name="ButtomBar" Background="LightSlateGray" ClosedDisplayMode="Compact">
            <CommandBar.PrimaryCommands>
                <AppBarButton x:Name="ShowFoodItemButton" Icon="ShowResults" Label="Foods" Click="ShowFoodItemButton_Click" />
                <AppBarButton x:Name="MyOrderButton" Icon="GoToToday" Label="Orders" Click="MyOrderButton_Click" />
                <AppBarButton x:Name="CommentButton" Icon="Comment" Label="Comments" Click="CommentButton_Click" />
            </CommandBar.PrimaryCommands>
        </CommandBar>
    </Page.BottomAppBar>
</Page>
