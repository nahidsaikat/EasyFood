<Page
    x:Class="EasyFood.View.SubmitOrder"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EasyFood.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <!--<Grid Background="#FF90B8C1">-->
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock x:Name="OrderNoTextBlock" 
                   HorizontalAlignment="Center" 
                   FontSize="24" 
                   Foreground="DarkBlue" 
                   FontWeight="SemiBold" 
                   Margin="0,10,0,0"
                   />
        <TextBlock Name="WarningTextBlock" 
                   Text="" 
                   Grid.Row="1"
                   FontSize="15" 
                   Margin="20, 10, 0, 0"    
                   Foreground="DarkGreen"
                   />
        <ListView x:Name="OrderItemsListView"
                  Grid.Row="2"
                  Padding="50,10,50,10"
                  />
        <RelativePanel Grid.Row="3" >
            <TextBlock x:Name="TotalTextBlock"
                       Padding="60, 10, 50, 10"
                       Text=""
                       FontSize="20"
                       Foreground="#FF113C23"
                       RelativePanel.AlignLeftWithPanel="True"
                       RelativePanel.AlignTopWithPanel="True" 
                       />
            <Button x:Name="SubmitButton"
                    Content="Submit"
                    Margin="40, 10, 10, 10"
                    Click="SubmitButton_Click"
                    RelativePanel.RightOf="TotalTextBlock"
                    />
        </RelativePanel>

    </Grid>
</Page>
