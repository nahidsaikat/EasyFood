<Page
    x:Class="EasyFood.Controller.AddUser"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EasyFood.Controller"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    
    <Page.Resources>
        <Style TargetType="TextBlock" x:Key="TextBlockStyle">
            <Setter Property="FontSize" Value="20" />
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="Margin" Value="10,10,0,0" />
            <Setter Property="Foreground" Value="Black" />
        </Style>
    </Page.Resources>

    <Grid Background="#FFEAE7E7">
        <ScrollViewer HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock Name="WarningTextBlock" 
                           Text="" 
                           FontSize="15" 
                           Grid.Column="1" 
                           Foreground="Red"/>
                <TextBlock Text="First name:" 
                           Grid.Row="1" 
                           Style="{StaticResource TextBlockStyle}" 
                           Margin="10,30,0,0"/>
                <TextBox Name="FirstNameTextBox" 
                         Grid.Column="1" 
                         Grid.Row="1" 
                         Width="200"
                         Margin="20,30,0,0" />
                <TextBlock Text="Last name:" 
                           Grid.Row="2" 
                           Style="{StaticResource TextBlockStyle}" />
                <TextBox Name="LastNameTextBox" 
                         Grid.Column="1" 
                         Grid.Row="2" 
                         Width="200"
                         Margin="20,10,0,0" />
                <TextBlock Text="User name:" 
                           Grid.Row="3" 
                           Style="{StaticResource TextBlockStyle}" />
                <TextBox Name="UserNameTextBox" 
                         Grid.Column="1" 
                         Grid.Row="3" 
                         Width="200"
                         Margin="20,10,0,0" />
                <TextBlock Text="Password:" 
                           Grid.Row="4" 
                           Style="{StaticResource TextBlockStyle}" />
                <PasswordBox Name="PasswordTextBox" 
                         Grid.Column="1" 
                         Grid.Row="4" 
                         Width="200"
                         Margin="20,10,0,0" />
                <TextBlock Text="Email:" 
                           Grid.Row="5" 
                           Style="{StaticResource TextBlockStyle}" />
                <TextBox Name="EmailTextBox" 
                         Grid.Column="1" 
                         Grid.Row="5" 
                         Width="200"
                         Margin="20,10,0,0" />
                <TextBlock Text="Contact No:" 
                           Grid.Row="6" 
                           Style="{StaticResource TextBlockStyle}" />
                <TextBox Name="ContactNoTextBox" 
                         Grid.Column="1" 
                         Grid.Row="6" 
                         Width="200"
                         Margin="20,10,0,0" />
                <TextBlock Text="Type:" 
                           Grid.Row="7" 
                           Style="{StaticResource TextBlockStyle}" />
                <ComboBox Name="UserTypeComboBox" 
                              Width="200" 
                              Grid.Column="1" 
                              Grid.Row="7" 
                              Margin="20,10,0,0">
                    <ComboBoxItem Content="Admin" />
                    <ComboBoxItem Content="User" />
                </ComboBox>
                <Button Name="UserAddButton"
                        Content="Add"
                        Click="UserAddButton_Click"
                        FontWeight="Normal"
                        Grid.Column="1"
                        Grid.Row="8"
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Stretch" 
                        Background="#FF615C5C"
                        Foreground="#FFFBF2E1" 
                        BorderBrush="Gray" 
                        BorderThickness="2,2,2,2"
                        Margin="0,10,0,0"
                        Width="70"
                        Height="40"/>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
